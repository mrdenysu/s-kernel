{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "es6",
      "esnext"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "outDir": "./lib",
  },
  "exclude": [
    "node_modules"
  ]
}